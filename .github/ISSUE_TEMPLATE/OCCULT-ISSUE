  - type: markdown
    attributes:
      value: |
        Thanks for taking the time to fill out this bug report!
  - type: input
    id: contact
    attributes:
      label: Contact Details
      description: Please paste your discord username and ID in here in case we need to reach out for more info.
      placeholder: name#0000
    validations:
      required: false
  - type: textarea
    id: what-happened
    attributes:
      label: What happened?
      description: Please describe the issue.
      placeholder: Tell us what you see!
      value: "Your description here..."
    validations:
      required: true
  - type: checkboxes
    id: terms
    attributes:
      label: Did your game crash?
      options:
        - label: Check this box if your game crashed
          required: false
  - type: textarea
    attributes:
      label: Steps To Reproduce
      description: Steps to reproduce the behavior.
      placeholder: |
        1. First I did this...
        2. Then this happened...
        3. Then...
        4. See error...
    validations:
      required: true